<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Resources</servlet-name>
        <servlet-class>iaas.Resources</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Quotas</servlet-name>
        <servlet-class>iaas.Quotas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Actions</servlet-name>
        <servlet-class>iaas.Actions</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Probes</servlet-name>
        <servlet-class>iaas.Probes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Insert</servlet-name>
        <servlet-class>metrics.Insert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Get</servlet-name>
        <servlet-class>metrics.Get</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>probes.Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deploy</servlet-name>
        <servlet-class>deployment.Deploy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SmartDeployment</servlet-name>
        <servlet-class>deployment.SmartDeployment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Shutdown</servlet-name>
        <servlet-class>deployment.Shutdown</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResizingAction</servlet-name>
        <servlet-class>deployment.ResizingAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetConfiguration</servlet-name>
        <servlet-class>deployment.GetConfiguration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetActionHistory</servlet-name>
        <servlet-class>action.GetActionHistory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Resources</servlet-name>
        <url-pattern>/iaas/resources</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Quotas</servlet-name>
        <url-pattern>/iaas/quotas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Actions</servlet-name>
        <url-pattern>/iaas/actions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Probes</servlet-name>
        <url-pattern>/iaas/probes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Insert</servlet-name>
        <url-pattern>/metrics/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Get</servlet-name>
        <url-pattern>/metrics/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/probes/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deploy</servlet-name>
        <url-pattern>/deployment/deploy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SmartDeployment</servlet-name>
        <url-pattern>/deployment/smartDeployment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Shutdown</servlet-name>
        <url-pattern>/deployment/shutdown</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResizingAction</servlet-name>
        <url-pattern>/deployment/resizingAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetConfiguration</servlet-name>
        <url-pattern>/deployment/getConfiguration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetActionHistory</servlet-name>
        <url-pattern>/action/getActionHistory</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
